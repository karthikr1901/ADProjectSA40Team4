<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/layoutTheme">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <RadioGroup
            android:id="@+id/radioPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioPoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radioPoint"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioPoint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radioPoint" />

        </RadioGroup>

    </LinearLayout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.student.adprojectsa40team4.CollectionPointsInfoFragment">

        <ListView
            android:id="@id/list_collection_points"
            android:layout_width="match_parent"
            android:layout_height="374dp"
            android:layout_gravity="center"
            style="@style/DataListView"/>
    </FrameLayout>
</LinearLayout>